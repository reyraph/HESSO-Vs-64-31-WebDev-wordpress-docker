# Configuration de la base de données MySQL
# Copiez ce fichier en .env et modifiez les valeurs si nécessaire

# Mot de passe root MySQL
MYSQL_ROOT_PASSWORD=root_password_2024

# Base de données WordPress
MYSQL_DATABASE=wordpress_db
MYSQL_USER=wordpress_user
MYSQL_PASSWORD=wordpress_pass_2024

# Port WordPress (changez si 8080 est déjà utilisé)
WORDPRESS_PORT=8080

# Préfixe des tables WordPress
WORDPRESS_TABLE_PREFIX=wp_

# Mode debug WordPress (0 = désactivé, 1 = activé)
WORDPRESS_DEBUG=0

# Fuseau horaire
TIMEZONE=Europe/Zurich
